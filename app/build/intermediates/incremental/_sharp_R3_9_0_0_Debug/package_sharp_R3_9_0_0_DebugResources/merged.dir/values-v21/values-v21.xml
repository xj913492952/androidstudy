<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="height_top_bar">48dp</dimen>
    <dimen name="status_bar_height">24dp</dimen>
    <dimen name="toolbar_and_statusbar">72dp</dimen>
    <style name="AppTheme_windowTranslucentStatus" parent="BaseAppTheme">
        <item name="android:windowAnimationStyle">@style/Anim_main</item>
        <item name="android:colorControlNormal">@color/colorButtonNormal</item>
        <item name="android:colorControlActivated">@color/colorControlActivated</item>
    </style>
    <style name="Dialog_alert" parent="android:Theme.Material.Light.Dialog.Alert">
        
        <item name="android:colorAccent">@color/black_light</item>
        
        <item name="android:colorControlNormal">#f00</item>
        
        <item name="android:colorControlActivated">#0f0</item>
        
        <item name="android:colorControlHighlight">#0ff</item>
        
        <item name="android:colorButtonNormal">@color/orange</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="listpopstyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">true</item>
        <item name="android:popupElevation">16dp</item>
        <item name="android:popupBackground">#ffffff</item>
    </style>
</resources>